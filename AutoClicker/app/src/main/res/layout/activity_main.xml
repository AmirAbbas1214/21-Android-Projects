<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Setting" />

            <TextView
                android:id="@+id/single_mode_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="10dp" />

            <TextView
                android:id="@+id/single_mode_usage_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="10dp" />

            <ToggleButton
                android:textColor="@color/white_smoke"
                android:id="@+id/enable_single_mode_button"
                android:background="@drawable/toggle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:checked="true"
                android:textOn="@string/enable"
                android:textOff="@string/disable" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Multi Targets Mode" />

            <TextView
                android:id="@+id/multi_mode_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="10dp" />

            <TextView
                android:id="@+id/multi_mode_usage_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="10dp" />

            <TextView
                android:id="@+id/manage_configurations_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Configurations"
                android:drawableLeft="@drawable/ic_build"
                android:drawablePadding="10dp" />

            <ToggleButton
                android:textColor="@color/white_smoke"
                android:id="@+id/enable_multi_mode_button"
                android:background="@drawable/toggle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:checked="true"
                android:textOn="@string/enable"
                android:textOff="@string/disable" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Other" />

            <TextView
                android:id="@+id/remove_ads_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Ads"
                android:drawableLeft="@drawable/ic_remove_ads"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/common_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Common Settings"
                android:drawableLeft="@drawable/ic_setting"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/troubleshooting_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Troubleshooting"
                android:drawableLeft="@drawable/ic_help"
                android:drawablePadding="10dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center"
        android:id="@+id/app_version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="Ver 1.0.0"
        android:layout_marginVertical="3dp" />
</LinearLayout>
